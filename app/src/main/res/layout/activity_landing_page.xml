<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="uofprojects.see.LandingPageActivity">

    <EditText
        android:id="@+id/channel_name"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/create_channel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Create Channel"
        android:layout_below="@+id/channel_name"/>

    <LinearLayout
        android:id="@+id/buttons_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/create_channel"
        android:layout_marginTop="25dp">

        <Button
            android:id="@+id/subscribe_channel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Subscribe"/>


        <Button
            android:id="@+id/start_video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start Video"/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/subscription_list_text"
        android:visibility="gone"
        android:text="Subscribed channels:"
        android:layout_below="@+id/buttons_layout"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/subscription_list"
        android:visibility="gone"
        android:layout_below="@+id/subscription_list_text"
        android:layout_marginTop="10dp"/>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/channels_list_text"
        android:visibility="gone"
        android:text="Select a channel from below to subscribe:"
        android:layout_below="@+id/subscription_list"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/channels_list"
        android:visibility="gone"
        android:layout_below="@+id/channels_list_text"
        android:layout_marginTop="10dp"/>


</RelativeLayout>
